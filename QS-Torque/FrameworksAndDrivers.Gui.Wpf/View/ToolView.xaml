                                                 styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                 styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterTextBoxStyle}" 
                                                 AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelDriveSize"/>
                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="6"
                                                   Text="{wpf:Gettext HelperTable|Drive type}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <TextBox Grid.Column="1"
                                                 Grid.Row="6"
                                                 Text="{Binding SelectedTool.ToolModelModel.DriveType.Value}"
                                                 styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                 styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterTextBoxStyle}" 
                                                 AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelModelDriveType"/>
                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="7"
                                                   TextAlignment="Center"
                                                   Text="{wpf:Gettext ToolModelView|Lower power limit}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <Grid Grid.Column="1"
                                              Grid.Row="7"
                                              VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <syncfusion:DoubleTextBox Grid.Column="0"
                                                                      Value="{Binding SelectedTool.ToolModelModel.MinPower}"
                                                                      styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                                      styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterDoubleTextBoxStyle}" 
                                                                      AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelLowerPowerLimit"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{wpf:Gettext Unit|Nm}"
                                                       VerticalAlignment="Center" />
                                        </Grid>
                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="8"
                                                   Text="{wpf:Gettext ToolModelView|Upper power limit}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <Grid Grid.Column="1"
                                              Grid.Row="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <syncfusion:DoubleTextBox Grid.Column="0"
                                                                      Value="{Binding SelectedTool.ToolModelModel.MaxPower}"
                                                                      styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                                      styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterDoubleTextBoxStyle}" 
                                                                      AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelUpperPowerLimit"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{wpf:Gettext Unit|Nm}"
                                                       VerticalAlignment="Center" />
                                        </Grid>
                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="9"
                                                   Text="{wpf:Gettext ToolModelView|Air pressure}"
                                                   Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=AirPressure}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <Grid Grid.Column="1"
                                              Grid.Row="9"
                                              Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=AirPressure}"
                                              VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <syncfusion:DoubleTextBox Grid.Column="0"
                                                                      Value="{Binding SelectedTool.ToolModelModel.AirPressure}"
                                                                      styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                                      styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterDoubleTextBoxStyle}" 
                                                                      AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelAirPressure"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{wpf:Gettext Unit|bar}"
                                                       VerticalAlignment="Center" />
                                        </Grid>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="10"
                                                   Text="{wpf:Gettext ToolModelView|Weight}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <syncfusion:DoubleTextBox Grid.Column="1"
                                                                  Grid.Row="10"
                                                                  Value="{Binding SelectedTool.ToolModelModel.Weight}"
                                                                  styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                                  styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterDoubleTextBoxStyle}" 
                                                                  AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelWeight"/>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="11"
                                                   Text="{wpf:Gettext ToolModelView|Max. rotation speed}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=MaxRotationSpeed}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <syncfusion:DoubleTextBox Grid.Column="1"
                                                                  Grid.Row="11"
                                                                  Value="{Binding SelectedTool.ToolModelModel.MaxRotationSpeed}"
                                                                  styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                                  Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=MaxRotationSpeed}"
                                                                  styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterDoubleTextBoxStyle}" 
                                                                  AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelMaxRotSpeed"/>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="12"
                                                   Text="{wpf:Gettext ToolModelView|Battery voltage}"
                                                   Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=BatteryVoltage}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <syncfusion:DoubleTextBox Grid.Column="1"
                                                                  Grid.Row="12"
                                                                  Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=BatteryVoltage}"
                                                                  Value="{Binding SelectedTool.ToolModelModel.BatteryVoltage}"
                                                                  styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                                  styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterDoubleTextBoxStyle}" 
                                                                  AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelBatteryVoltage"/>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="13"
                                                   Text="{wpf:Gettext ToolModelView|Air consumption}"
                                                   Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=AirConsumption}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <syncfusion:DoubleTextBox Grid.Column="1"
                                                                  Grid.Row="13"
                                                                  Value="{Binding SelectedTool.ToolModelModel.AirConsumption}"
                                                                  Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=AirConsumption}"
                                                                  styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                                  styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterDoubleTextBoxStyle}" 
                                                                  AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelAirConsumption"/>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="{wpf:Gettext ToolView|Picture}"
                                          Margin="10"
                                          Width="400"
                                          HorizontalAlignment="Left"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}"
                                          Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}">
                                    <c:ThemeImage Source="{Binding Path=SelectedTool.Picture.Image, 
                                                           TargetNullValue='pack://application:,,,/Resources;component/Icons/picture.png',
                                                           FallbackValue='pack://application:,,,/Resources;component/Icons/picture.png'}"
                                                  Margin="10" />
                                </GroupBox>
                            </WrapPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="{wpf:Gettext ToolView|Cm-/Cmk-Limit}" AutomationProperties.AutomationId="AI_ToolView_TabCmCmk">
                        <Grid Margin="0,10,10,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="0"
                                        x:Name="StackPanelForCmCmk"
                                        Orientation="Horizontal"
                                        Margin="10, 5,0,5">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"
                                           Text="{wpf:Gettext ToolView|Cm-/Cmk-Limit}" />
                                <ComboBox HorizontalAlignment="Left"
                                          Margin="5,0,0,0"
                                          SelectedIndex="0"
                                          AutomationProperties.AutomationId="AI_ToolView_SingleTool_CmCmkLimit">
                                    <ComboBoxItem>Qst-Standard</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Left">
                                <syncfusion:SfDataGrid SelectionMode="Single"
                                                       AllowFiltering="False"
                                                       AllowDeleting="False"
                                                       AllowSorting="False"
                                                       ColumnSizer="Star"
                                                       AutoGenerateColumns="False"
                                                       Margin="10,5,0,0"
                                                       Width="{Binding ActualWidth, ElementName=StackPanelForCmCmk}"
                                                       ItemsSource="{Binding CmCmkTuples}"
                                                       AutomationProperties.AutomationId="">
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridNumericColumn MappingName="Cm"
                                                                      HeaderText="{wpf:Gettext ToolModelView|Limit Cm}" />
                                        <syncfusion:GridNumericColumn MappingName="Cmk"
                                                                      HeaderText="{wpf:Gettext ToolModelView|Limit Cmk}" />
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="{wpf:Gettext ToolView|Additional information}" AutomationProperties.AutomationId="AI_ToolView_TabAdditionalInformation">
                        <DockPanel>
                            <Grid DockPanel.Dock="Top"
                                  Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="22" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0"
                                           Grid.Row="0"
                                           Text="{wpf:Gettext ToolView|Configurable field 1}"
                                           styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                           styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                <TextBox Grid.Column="2"
                                         Grid.Row="0"
                                         MaxLength="40"
                                         Text="{Binding SelectedTool.AdditionalConfigurableField1}"
                                         styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                         styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBoxStyle}" 
                                         AutomationProperties.AutomationId="AI_ToolView_SingleTool_ConfigurableField1"/>

                                <TextBlock Grid.Column="0"
                                           Grid.Row="1"
                                           Text="{wpf:Gettext ToolView|Configurable field 2}"
                                           styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                           styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                <TextBox Grid.Column="2"
                                         Grid.Row="1"
                                         MaxLength="80"
                                         Text="{Binding SelectedTool.AdditionalConfigurableField2}"
                                         styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                         styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBoxStyle}" 
                                         AutomationProperties.AutomationId="AI_ToolView_SingleTool_ConfigurableField2"/>

                                <TextBlock Grid.Column="0"
                                           Grid.Row="2"
                                           Text="{wpf:Gettext ToolView|Configurable field 3}"
                                           styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                           styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                <TextBox Grid.Column="2"
                                         Grid.Row="2"
                                         MaxLength="250"
                                         Text="{Binding SelectedTool.AdditionalConfigurableField3}"
                                         styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                         styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBoxStyle}" 
                                         AutomationProperties.AutomationId="AI_ToolView_SingleTool_ConfigurableField3"/>
                            </Grid>

                            <Rectangle DockPanel.Dock="Top"
                                       Margin="10,0"
                                       Height="1"
                                       Fill="{DynamicResource SeperatedAreaBrush}" />

                            <Grid DockPanel.Dock="Top"
                                  Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}"
                                  Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="22" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0"
                                           Grid.Row="0"
                                           Text="{wpf:Gettext ToolView|Count tool attachments}"
                                           styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                           styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                <syncfusion:IntegerTextBox Grid.Column="2"
                                                           Grid.Row="0"
                                                           MaxLength="50"
                                                           IsReadOnly="True"
                                                           Text="0"
                                                           Width="100"
                                                           BorderBrush="{DynamicResource SeperatedAreaBrush}"
                                                           styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                           styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBoxStyle}" />

                                <TextBlock Grid.Column="0"
                                           Grid.Row="1"
                                           Text="{wpf:Gettext ToolView|Count tool monitorings}"
                                           styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                           styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                <syncfusion:IntegerTextBox Grid.Column="2"
                                                           Grid.Row="1"
                                                           MaxLength="50"
                                                           IsReadOnly="True"
                                                           Text="0"
                                                           Width="100"
                                                           BorderBrush="{DynamicResource SeperatedAreaBrush}"
                                                           styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                           styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBoxStyle}" />


                                <TextBlock Grid.Column="0"
                                           Grid.Row="2"
                                           Text="{wpf:Gettext ToolView|Count MCAs}"
                                           styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                           styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                <syncfusion:IntegerTextBox Grid.Column="2"
                                                           Grid.Row="2"
                                                           MaxLength="50"
                                                           IsReadOnly="True"
                                                           Text="0"
                                                           Width="100"
                                                           BorderBrush="{DynamicResource SeperatedAreaBrush}"
                                                           styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                           styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBoxStyle}" />
