                                                 Grid.Row="2"
                                                 Text="{Binding SelectedTool.ToolModelModel.ConstructionType.Value}"
                                                 MaxLength="50"
                                                 styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                 styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterTextBoxStyle}" 
                                                 AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelConstructionType"/>
                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="3"
                                                   Text="{wpf:Gettext HelperTable|Switch off}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <TextBox Grid.Column="1"
                                                 Grid.Row="3"
                                                 Text="{Binding SelectedTool.ToolModelModel.SwitchOff.Value}"
                                                 MaxLength="50"
                                                 styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                 styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterTextBoxStyle}" 
