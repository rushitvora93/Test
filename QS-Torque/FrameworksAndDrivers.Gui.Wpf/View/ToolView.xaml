                                                 Grid.Row="4"
                                                 Text="{Binding SelectedTool.ToolModelModel.ShutOff.Value}"
                                                 styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBox}}"
                                                 styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ReadOnlyToolParameterTextBoxStyle}" 
                                                 AutomationProperties.AutomationId="AI_ToolView_SingleTool_ModelShutOff"/>
                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="5"
                                                   Text="{wpf:Gettext HelperTable|Drive size}"
                                                   styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                                   styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                        <TextBox Grid.Column="1"
                                                 Grid.Row="5"
                                                 Text="{Binding SelectedTool.ToolModelModel.DriveSize.Value}"
