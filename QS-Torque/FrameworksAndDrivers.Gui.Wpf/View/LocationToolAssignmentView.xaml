                                               Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=MaxRotationSpeed}"
                                               styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                    <syncfusion:DoubleTextBox Grid.Column="1"
                                                              Grid.Row="11"
                                                              HorizontalAlignment="Left"
                                                              Value="{Binding SelectedTool.ToolModelModel.MaxRotationSpeed}"
                                                              styles:DynamicContainerStyle.BaseStyle="{DynamicResource ReadonlyTextBoxStyle}"
                                                              Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=MaxRotationSpeed}" 
                                                              AutomationProperties.AutomationId="AI_MpToolAllocation_ToolParamTab_ModelMaxRotationSpeed"/>

                                    <TextBlock Grid.Column="0"
                                               Grid.Row="12"
                                               Text="{wpf:Gettext ToolModelView|Battery voltage}"
                                               Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=BatteryVoltage}"
                                               styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                               styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                    <syncfusion:DoubleTextBox Grid.Column="1"
                                                              Grid.Row="12"
                                                              HorizontalAlignment="Left"
                                                              Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=BatteryVoltage}"
                                                              Value="{Binding SelectedTool.ToolModelModel.BatteryVoltage}"
                                                              styles:DynamicContainerStyle.BaseStyle="{DynamicResource ReadonlyTextBoxStyle}" 
                                                              AutomationProperties.AutomationId="AI_MpToolAllocation_ToolParamTab_ModelBatteryVoltage"/>

                                    <TextBlock Grid.Column="0"
                                               Grid.Row="13"
                                               Text="{wpf:Gettext ToolModelView|Air consumption}"
                                               Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=AirConsumption}"
                                               styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TextBlock}}"
                                               styles:DynamicContainerStyle.DerivedStyle="{DynamicResource ToolParameterTextBlockStyle}" />
                                    <syncfusion:DoubleTextBox Grid.Column="1"
                                                              Grid.Row="13"
                                                              HorizontalAlignment="Left"
                                                              Value="{Binding SelectedTool.ToolModelModel.AirConsumption}"
                                                              Visibility="{Binding SelectedTool.ToolModelModel, Converter={StaticResource ToolModelModelToVisibilityConverter}, ConverterParameter=AirConsumption}"
                                                              styles:DynamicContainerStyle.BaseStyle="{DynamicResource ReadonlyTextBoxStyle}" 
                                                              AutomationProperties.AutomationId="AI_MpToolAllocation_ToolParamTab_ModelAirConsumption"/>
                                </Grid>
                            </GroupBox>
                        </WrapPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <GridSplitter Grid.Column="3"
                          Width="2"
                          HorizontalAlignment="Stretch"
                          Margin="10,0"
                          Background="{DynamicResource GridSplitterBackground}" />

            <TabControl Grid.Column="4"
                        TabStripPlacement="Top">
                <TabItem Header="{wpf:Gettext LocationToolAssignmentView|All Tools}" AutomationProperties.AutomationId="AI_MpToolAllocation_AllToolsTab">
                    <!--ToolTree-->
                    <syncfusion:TreeViewAdv x:Name="ToolTreeView"
                                            AnimationType="None"
                                            BorderThickness="0"
                                            AllowMultiSelect="False"
                                            AllowDragDrop="False"
                                            SelectedTreeItem="{Binding Path=SelectedToolTreeViewItemAdv, 
                                                               RelativeSource={RelativeSource Mode=FindAncestor, 
                                                                                              AncestorType=view:LocationToolAssignmentView}, 
                                                               Delay=0, 
                                                               Mode=OneWayToSource,
                                                               FallbackValue={x:Null}}" 
                                            AutomationProperties.AutomationId="AI_MpToolAllocation_ToolTreeView">
                        <syncfusion:TreeViewAdv.ItemContainerStyle>
                            <Style TargetType="syncfusion:TreeViewItemAdv">
                                <Setter Property="AutomationProperties.AutomationId" Value="AI_MpToolAllocation_ToolTreeView_RootNode"/>
                            </Style>
                        </syncfusion:TreeViewAdv.ItemContainerStyle>
                    </syncfusion:TreeViewAdv>
                </TabItem>

                <TabItem Header="{wpf:Gettext LocationToolAssignmentView|Assigned Tools}" AutomationProperties.AutomationId="AI_MpToolAllocation_AllocatedToolsTab">
                    <!--Assigned Tools-->
                    <c:ExtendedSfDataGrid x:Name="LocationToolAssignments"
                                          BorderThickness="0"
                                          HeaderRowHeight="25"
                                          SelectionMode="Single"
                                          SelectedItem="{Binding SelectedLocationToolAssignmentModel}"
                                          ItemsSource="{Binding AssignmentsForSelectedLocation}"
                                          RowStyle="{StaticResource customRowStyle}"
                                          HeaderStyle="{StaticResource customHeaderStyle}"
                                          AutomationProperties.AutomationId="AI_MpToolAllocation_AllocatedToolsGrid">
                        <c:ExtendedSfDataGrid.Columns>
                            <syncfusion:GridTextColumn HeaderText="{wpf:Gettext LocationToolAssignment|Serial number}"
                                                       MappingName="AssignedTool.SerialNumber" />
                            <syncfusion:GridTextColumn HeaderText="{wpf:Gettext LocationToolAssignment|Inventory number}"
                                                       MappingName="AssignedTool.InventoryNumber" />
                            <syncfusion:GridTextColumn HeaderText="{wpf:Gettext LocationToolAssignment|Tool usage}"
                                                       MappingName="ToolUsage.Value"/>
                        </c:ExtendedSfDataGrid.Columns>
                    </c:ExtendedSfDataGrid>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</UserControl>