<UserControl x:Class="FrameworksAndDrivers.Gui.Wpf.View.LocationToolAssignmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FrameworksAndDrivers.Gui.Wpf.ViewModel"
             xmlns:view="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View"
             xmlns:wpf="clr-namespace:NGettext.Wpf;assembly=NGettext.Wpf"
             xmlns:c="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Controls"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:styles="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Styles"
             xmlns:converter="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Converter"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Behaviors"
             xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="2000"
             d:DesignWidth="1920"
             d:DataContext="{d:DesignInstance local:LocationToolAssignmentViewModel, IsDesignTimeCreatable=False}"
             AutomationProperties.AutomationId="AI_MpToolAllocation">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Styles/TextBoxStyles.xaml" />
                <ResourceDictionary Source="Styles/TextBlockStyles.xaml" />
                <ResourceDictionary Source="Styles/GroupBoxStyles.xaml" />
                <ResourceDictionary Source="Styles/TabStyles.xaml" />
                <ResourceDictionary Source="Styles/TreeStyles.xaml" />
                <ResourceDictionary Source="Styles/SfDataGridStyles.xaml" />
                <ResourceDictionary Source="Styles/PanelStyles.xaml" />
                <ResourceDictionary Source="Styles/ComboBoxStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converter:ToolModelModelToVisibilityConverter x:Key="ToolModelModelToVisibilityConverter" />
            <converter:ToolTypeModelToVisibilityConverter x:Key="ToolTypeModelToVisibilityConverter" />
            <converter:NullToBooleanConverter x:Key="NullToBooleanConverter" />
            <ControlTemplate x:Key="ValidationTemplate">
                <Border BorderBrush="Red"
                        BorderThickness="1">
                    <Grid Background="Transparent"
                          ToolTip="{Binding Path=/ErrorContent}">
                        <AdornedElementPlaceholder />
                    </Grid>
                </Border>
            </ControlTemplate>
            <Style TargetType="syncfusion:VirtualizingCellsControl" x:Key="customRowStyle">
                <Setter Property="AutomationProperties.AutomationId">
                    <Setter.Value>
                        <MultiBinding StringFormat="AI_MpToolAllocation_AllocatedToolsGrid_Row:{0},{1}">
                            <Binding Path="AssignedTool.SerialNumber"/>
                            <Binding Path="AssignedTool.InventoryNumber"/>
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="syncfusion:GridHeaderCellControl" x:Key="customHeaderStyle">
                <Setter Property="AutomationProperties.AutomationId" Value="AI_MpToolAllocation_AllocatedToolsGrid_HeaderRow"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <DockPanel>
        <!--Ribbon-->
        <TabControl DockPanel.Dock="Top"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    Height="120">
            <TabItem Header="{wpf:Gettext Start}"
                     Height="30"
                     Padding="10,0">
                <StackPanel Orientation="Horizontal">
                    <Button MinWidth="70"
                            MaxWidth="85"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Command="{Binding AssignToolToLocationCommand}"
                            Style="{DynamicResource TransparentButtonStyle}"
                            AutomationProperties.AutomationId="AI_MpToolAllocation_AllocateTool">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/link.png"
                                          Height="30"
                                          Margin="0,0,0,2" />
                            <TextBlock Text="{wpf:Gettext LocationToolAssignmentView|Assign tool}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </Button>
                    <Button MinWidth="70"
                            MaxWidth="85"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Command="{Binding AddTestConditionsCommand}"
                            Style="{DynamicResource TransparentButtonStyle}"
                            AutomationProperties.AutomationId="AI_MpToolAllocation_CreateTestConditions">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/add.png"
                                          Height="30"
                                          Margin="0,0,0,2" />
                            <TextBlock Text="{wpf:Gettext LocationToolAssignmentView|Create test conditions}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </Button>
                    <Button MinWidth="70"
                            MaxWidth="85"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Command="{Binding RemoveLocationToolAssignmentCommand}"
                            Style="{DynamicResource TransparentButtonStyle}"
                            AutomationProperties.AutomationId="AI_MpToolAllocation_RemoveToolAllocation">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/delete.png"
                                          Height="30"
                                          Margin="0,0,0,2" />
                            <TextBlock Text="{wpf:Gettext LocationToolAssignmentView|Remove tool assignment}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </Button>
                    <Button MinWidth="70"
                            MaxWidth="85"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Command="{Binding SaveLocationToolAssignmentCommand}"
                            Style="{DynamicResource TransparentButtonStyle}"
                            AutomationProperties.AutomationId="AI_MpToolAllocation_SaveLocationToolAssignement">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/save.png"
                                          Height="30"
                                          Margin="0,0,0,2" />
                            <TextBlock Text="{wpf:Gettext LocationToolAssignmentView|Save}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </Button>
                    <Button MinWidth="70"
                            MaxWidth="85"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Command="{Binding ShowToolDetailsDialog}"
                            Style="{DynamicResource TransparentButtonStyle}"
                            AutomationProperties.AutomationId="AI_MpToolAllocation_ShowToolDetails">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/loupe.png"
                                          Height="30"
                                          Margin="0,0,0,2" />
                            <TextBlock Text="{wpf:Gettext LocationToolAssignmentView|Tool details}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </TabItem>
        </TabControl>

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="200" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2.5*"
                                  MinWidth="200" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition MinWidth="200" />
            </Grid.ColumnDefinitions>

            <!--LocationTree-->
            <syncfusion:TreeViewAdv x:Name="LocationTreeView"
                                    Grid.Column="0"
                                    AnimationType="None"
                                    AllowMultiSelect="False"
                                    AllowDragDrop="False"
                                    SelectedTreeItem="{Binding Path=SelectedLocationTreeItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=view:LocationToolAssignmentView}, Delay=250, Mode=OneWayToSource}" 
                                    AutomationProperties.AutomationId="AI_MpToolAllocationMeasurementTreeView">
                <syncfusion:TreeViewAdv.ItemContainerStyle>
                    <Style TargetType="syncfusion:TreeViewItemAdv">
                        <Setter Property="AutomationProperties.AutomationId" Value="AI_MpToolAllocation_MpTreeView_RootNode"/>
                    </Style>
                </syncfusion:TreeViewAdv.ItemContainerStyle>
            </syncfusion:TreeViewAdv>

            <GridSplitter Grid.Column="1"
                          Width="2"
                          HorizontalAlignment="Stretch"
                          Margin="10,0"
                          Background="{DynamicResource GridSplitterBackground}" />

            <TabControl Grid.Column="2" Name="TabControl">
                <TabItem Header="{wpf:Gettext LocationtoolAssignmentView|Location tool assignment data}" AutomationProperties.AutomationId="AI_MpToolAllocation_MpToolAllocTab">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.Resources>
                            <CollectionViewSource x:Key="AvailableToolUsagesViewSource"
                                                  Source="{Binding AvailableToolUsages}">
                                <CollectionViewSource.SortDescriptions>
                                    <componentModel:SortDescription PropertyName="Value"
                                                                    Direction="Ascending" />
                                </CollectionViewSource.SortDescriptions>

                            </CollectionViewSource>
                        </Grid.Resources>
                            <TextBlock Grid.Row="0" 
                                   Grid.Column="0"
                                   Margin="5"
                                   TextAlignment="Right"
                                   Text="{wpf:Gettext LocationToolassignmentView|Location}"/>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Margin="5"
                                   Text="{Binding SelectedLocationFormattedName}"
                                   AutomationProperties.AutomationId="AI_MpToolAllocation_MpToolAllocTab_Mp"/>
                        <TextBlock Grid.Row="1" 
                                   Grid.Column="0" 
                                   Margin="5"
                                   TextAlignment="Right"
                                   Text="{wpf:Gettext LocationToolassignmentView|Tool}"/>
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   Margin="5"
                                   Text="{Binding SelectedToolFormattedName}"
                                   AutomationProperties.AutomationId="AI_MpToolAllocation_MpToolAllocTab_Tool"/>
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Margin="5"
                                   TextAlignment="Right"
                                   Text="{wpf:Gettext Auxiliary Master Data|Tool usage}"/>
                        <ComboBox Grid.Row="2"
                                  Grid.Column="1"
                                  Margin="5"
                                  MinWidth="200"
                                  DisplayMemberPath="Value"
                                  IsEnabled="{Binding SelectedLocationToolAssignmentModel, Converter={StaticResource NullToBooleanConverter}}"
                                  SelectedItem="{Binding SelectedLocationToolAssignmentModel.ToolUsage}"
                                  ItemsSource="{Binding Source={StaticResource AvailableToolUsagesViewSource}}"
                                  AutomationProperties.AutomationId="AI_MpToolAllocation_MpToolAllocTab_ToolUsage"/>
                    </Grid>
                </TabItem>

                <TabItem Header="{wpf:Gettext LocationToolAssignmentView|Location parameter}" AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab">
                    <!--Parameters for selected location-->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_ScrollViewer">
                        <DockPanel>
                            <Grid DockPanel.Dock="Top"
                                  Margin="10,30,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0"
                                           Grid.Row="0"
                                           Text="{wpf:Gettext LocationView|Number}"
                                           HorizontalAlignment="Right"
                                           Margin="10,0,30,0" />
                                <TextBlock Grid.Column="0"
                                           Grid.Row="1"
                                           Text="{wpf:Gettext LocationView|Description}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Margin="10,0,30,0" />
                                <TextBlock Grid.Column="0"
                                           Grid.Row="2"
                                           Text="{wpf:Gettext LocationView|Controlled by}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Margin="10,0,30,0" />
                                <TextBox Grid.Column="1"
                                         Grid.Row="0"
                                         Width="400"
                                         HorizontalAlignment="Left"
                                         Text="{Binding SelectedLocation.Number, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                         AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_Number"/>
                                <TextBox Grid.Column="1"
                                         Grid.Row="1"
                                         Width="400"
                                         HorizontalAlignment="Left"
                                         Margin="0,10"
                                         Text="{Binding SelectedLocation.Description, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                         AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_Description"/>
                                <ContentControl Grid.Column="1"
                                                Grid.Row="2">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedLocation.ControlledBy}"
                                                             Value="Angle">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <TextBox Width="400"
                                                                     HorizontalAlignment="Left"
                                                                     Margin="0,10"
                                                                     Text="{wpf:Gettext LocationView|Angle}"
                                                                     Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                     AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_ControlledByAngle"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedLocation.ControlledBy}"
                                                             Value="Torque">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <TextBox Width="400"
                                                                     HorizontalAlignment="Left"
                                                                     Margin="0,10"
                                                                     Text="{wpf:Gettext LocationView|Torque}"
                                                                     Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                     AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_ControlledByTorque"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </Grid>

                            <WrapPanel Orientation="Horizontal"
                                       Grid.IsSharedSizeScope="True">
                                <!--Torque-->
                                <GroupBox Margin="20"
                                          Header="{wpf:Gettext LocationView|Torque}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">

                                    <GroupBox.Content>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="0"
                                                       Text="{wpf:Gettext LocationView|Setpoint}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="0"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding  SelectedLocation.SetPointTorque}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_SetPointTorque"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                                                                                                                                                                                                                                                                                                                                      Margin="5,0"
                                                                                                                                                                                                                                                                                                                                                                      VerticalAlignment="Center" />
                                            </StackPanel>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="1"
                                                       Text="{wpf:Gettext LocationView|Tolerance class}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <TextBox Grid.Column="1"
                                                     Grid.Row="1"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding SelectedLocation.ToleranceClassTorque.Name, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                     AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_ToleranceClassTorque"/>
                                            <Button Grid.Column="2"
                                                    Grid.Row="1"
                                                    Style="{DynamicResource HelperTableButtonStyle}" />

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="2"
                                                       Text="{wpf:Gettext LocationView|Minimum}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="2"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.MinimumTorque, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_MinimumTorque"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="3"
                                                       Text="{wpf:Gettext LocationView|Maximum}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="3"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.MaximumTorque, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_MaximumTorque"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox.Content>
                                </GroupBox>

                                <!--Angle-->
                                <GroupBox Margin="20"
                                          Header="{wpf:Gettext LocationView|Angle}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">

                                    <GroupBox.Content>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="0"
                                                       Text="{wpf:Gettext LocationView|Threshold torque}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="0"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.ThresholdTorque, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_ThresholdTorque"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="1"
                                                       Text="{wpf:Gettext LocationView|Setpoint}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="1"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.SetPointAngle, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_SetPointAngle"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Deg}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="2"
                                                       Text="{wpf:Gettext LocationView|Tolerance class}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <TextBox Grid.Column="1"
                                                     Grid.Row="2"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding SelectedLocation.ToleranceClassAngle.Name, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                     AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_ToleranceClassAngle"/>
                                            <Button Grid.Column="2"
                                                    Grid.Row="2"
                                                    Style="{DynamicResource HelperTableButtonStyle}" />

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="3"
                                                       Text="{wpf:Gettext LocationView|Minimum}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="3"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.MinimumAngle, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_MinimumAngle"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Deg}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="4"
                                                       Text="{wpf:Gettext LocationView|Maximum}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="4"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.MaximumAngle, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_MaximumAngle"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Deg}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox.Content>
                                </GroupBox>

                                <!--Configurable fields-->
                                <GroupBox Margin="20"
                                          Header="{wpf:Gettext LocationView|Configurable fields}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40" />
                                            <RowDefinition Height="40" />
                                            <RowDefinition Height="40" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="0"
                                                   Text="{wpf:Gettext LocationView|Configurable field}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="10,0,30,0" />
                                        <TextBox Grid.Column="1"
                                                 Grid.Row="0"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Text="{Binding SelectedLocation.ConfigurableField1, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                 AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_ConfigurableField1"/>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="1"
                                                   Text="{wpf:Gettext LocationView|Configurable field}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="10,0,30,0" />
                                        <TextBox Grid.Column="1"
                                                 Grid.Row="1"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Text="{Binding SelectedLocation.ConfigurableField2, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                 AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_ConfigurableField2"/>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="2"
                                                   Text="{wpf:Gettext LocationView|Configurable field}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="10,0,30,0" />
                                        <CheckBox Grid.Column="1"
                                                  Grid.Row="2"
                                                  VerticalAlignment="Center"
                                                  VerticalContentAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  IsChecked="{Binding SelectedLocation.ConfigurableField3}"
                                                  IsEnabled="False" 
                                                  AutomationProperties.AutomationId="AI_MpToolAllocation_MpParamTab_ConfigurableField3"/>
                                    </Grid>
                                </GroupBox>

                                <!--Comments-->
                                <GroupBox Margin="20"
                                          Header="{wpf:Gettext LocationView|Comment}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">
                                    <TextBox DockPanel.Dock="Left"
                                             AcceptsReturn="True"
                                             AcceptsTab="True"
                                             TextWrapping="Wrap"
                                             Margin="10"
                                             MaxWidth="400"
                                             MinWidth="100"
                                             MinHeight="30"
                                             Text="{Binding SelectedLocation.Comment, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{DynamicResource ReadonlyTextBoxStyle}" 
