                                         HorizontalAlignment="Left"
                                         Text="{Binding SelectedLocation.Number, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ReadonlyTextBoxStyle}"
                                         AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_Number"/>
                                <TextBox Grid.Column="1"
                                         Grid.Row="1"
                                         Width="400"
                                         HorizontalAlignment="Left"
                                         Margin="0,10"
                                         Text="{Binding SelectedLocation.Description, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                         AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_Description"/>
                                <ContentControl Grid.Column="1"
                                                Grid.Row="2">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedLocation.ControlledBy}"
                                                             Value="Angle">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <TextBox Width="400"
                                                                     HorizontalAlignment="Left"
                                                                     Margin="0,10"
                                                                     Text="{wpf:Gettext LocationView|Angle}"
                                                                     Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                     AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_ControlledBy"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedLocation.ControlledBy}"
                                                             Value="Torque">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <TextBox Width="400"
                                                                     HorizontalAlignment="Left"
                                                                     Margin="0,10"
                                                                     Text="{wpf:Gettext LocationView|Torque}"
                                                                     Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                     AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_ControlledBy"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </Grid>

                            <WrapPanel Orientation="Horizontal"
                                       Grid.IsSharedSizeScope="True">
                                <!--Torque-->
                                <GroupBox Margin="20"
                                          Header="{wpf:Gettext LocationView|Torque}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">

                                    <GroupBox.Content>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="0"
                                                       Text="{wpf:Gettext LocationView|Setpoint}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="0"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.SetPointTorque, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_SetPointTorque"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="1"
                                                       Text="{wpf:Gettext LocationView|Tolerance class}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <TextBox Grid.Column="1"
                                                     Grid.Row="1"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding SelectedLocation.ToleranceClassTorque.Name, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                     AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_ToleranceClassTorque"/>
                                            <Button Grid.Column="2"
                                                    Grid.Row="1"
                                                    Style="{DynamicResource HelperTableButtonStyle}" />

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="2"
                                                       Text="{wpf:Gettext LocationView|Minimum}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="2"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.MinimumTorque, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_MinimumTorque"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="3"
                                                       Text="{wpf:Gettext LocationView|Maximum}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="3"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.MaximumTorque, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_MaximumTorque"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox.Content>
                                </GroupBox>

                                <!--Angle-->
                                <GroupBox Margin="20"
                                          Header="{wpf:Gettext LocationView|Angle}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">

                                    <GroupBox.Content>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="40" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="0"
                                                       Text="{wpf:Gettext LocationView|Threshold torque}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="0"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.ThresholdTorque, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_ThresholdTorque"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="1"
                                                       Text="{wpf:Gettext LocationView|Setpoint}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="1"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.SetPointAngle, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_SetPointAngle"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Deg}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="2"
                                                       Text="{wpf:Gettext LocationView|Tolerance class}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <TextBox Grid.Column="1"
                                                     Grid.Row="2"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding SelectedLocation.ToleranceClassAngle.Name, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                     AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_ToleranceClassAngle"/>
                                            <Button Grid.Column="2"
                                                    Grid.Row="2"
                                                    Style="{DynamicResource HelperTableButtonStyle}" />

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="3"
                                                       Text="{wpf:Gettext LocationView|Minimum}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="3"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.MinimumAngle, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_MinimumAngle"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Deg}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="4"
                                                       Text="{wpf:Gettext LocationView|Maximum}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Margin="10,0,30,0" />
                                            <StackPanel Grid.Column="1"
                                                        Grid.Row="4"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <syncfusion:DoubleTextBox Value="{Binding SelectedLocation.MaximumAngle, UpdateSourceTrigger=PropertyChanged}"
                                                                          Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                                          AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_MaximumAngle"/>
                                                <TextBlock Text="{wpf:Gettext Unit|Deg}"
                                                           Margin="5,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox.Content>
                                </GroupBox>

                                <!--Configurable fields-->
                                <GroupBox Margin="20"
                                          Header="{wpf:Gettext LocationView|Configurable fields}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40" />
                                            <RowDefinition Height="40" />
                                            <RowDefinition Height="40" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="0"
                                                   Text="{wpf:Gettext LocationView|Configurable field}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="10,0,30,0" />
                                        <TextBox Grid.Column="1"
                                                 Grid.Row="0"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Text="{Binding SelectedLocation.ConfigurableField1, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                 AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_ConfigurableField1"/>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="1"
                                                   Text="{wpf:Gettext LocationView|Configurable field}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="10,0,30,0" />
                                        <TextBox Grid.Column="1"
                                                 Grid.Row="1"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Text="{Binding SelectedLocation.ConfigurableField2, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                                 AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_ConfigurableField2"/>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="2"
                                                   Text="{wpf:Gettext LocationView|Configurable field}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="10,0,30,0" />
                                        <CheckBox Grid.Column="1"
                                                  Grid.Row="2"
                                                  VerticalAlignment="Center"
                                                  VerticalContentAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  IsChecked="{Binding SelectedLocation.ConfigurableField3}"
                                                  IsEnabled="False" 
                                                  AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_ConfigurableField3"/>
                                    </Grid>
                                </GroupBox>

                                <!--Comments-->
                                <GroupBox Margin="20"
                                          Header="{wpf:Gettext LocationView|Comment}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">
                                    <TextBox DockPanel.Dock="Left"
                                             AcceptsReturn="True"
                                             AcceptsTab="True"
                                             TextWrapping="Wrap"
                                             Margin="10"
                                             MaxWidth="400"
                                             MinWidth="100"
                                             MinHeight="30"
                                             Text="{Binding SelectedLocation.Comment, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{DynamicResource ReadonlyTextBoxStyle}" 
                                             AutomationProperties.AutomationId="AI_PCV_LocationParameterTab_Comment"/>
                                </GroupBox>

                                <!--Picture-->
                                <GroupBox Margin="20"
                                          Header="{wpf:Gettext LocationView|Picture}"
                                          Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">
                                    <controls:ThemeImage Source="{Binding SelectedLocation.Picture.Image, 
                                                           TargetNullValue='pack://application:,,,/Resources;component/Icons/picture.png',
                                                           FallbackValue='pack://application:,,,/Resources;component/Icons/picture.png'}"
                                                  Height="500"
                                                  Stretch="Uniform"
                                                  Margin="10" />
                                </GroupBox>
                            </WrapPanel>
                        </DockPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</UserControl>