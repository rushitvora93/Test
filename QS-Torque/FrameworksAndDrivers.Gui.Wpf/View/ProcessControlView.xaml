<UserControl x:Class="FrameworksAndDrivers.Gui.Wpf.View.ProcessControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View"
             xmlns:local="clr-namespace:FrameworksAndDrivers.Gui.Wpf.ViewModel"
             xmlns:wpf="clr-namespace:NGettext.Wpf;assembly=NGettext.Wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:controls="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Controls"
             xmlns:styles="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Styles"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:enums="clr-namespace:Common.Types.Enums;assembly=Common.Types"
             xmlns:behaviors="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:ProcessControlViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="1200" d:DesignWidth="1200"
             AutomationProperties.AutomationId="AI_ProcessControlView">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadCommand}" ></b:InvokeCommandAction>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Styles/TextBoxStyles.xaml" />
                <ResourceDictionary Source="Styles/TextBlockStyles.xaml" />
                <ResourceDictionary Source="Styles/GroupBoxStyles.xaml" />
                <ResourceDictionary Source="Styles/TabStyles.xaml" />
                <ResourceDictionary Source="Styles/TreeStyles.xaml" />
                <ResourceDictionary Source="Styles/ComboBoxStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <Style x:Key="ExpanderHeadeStyle" TargetType="Label">
                <Setter Property="Margin" Value="5" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <TabControl DockPanel.Dock="Top"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    Height="120">
            <TabItem Header="{wpf:Gettext ProcessControl|Start}"
                     Height="30"
                     Padding="10,0">

                <StackPanel Orientation="Horizontal">
                    <Button Height="70"
                            MinWidth="75"
                            MaxWidth="85"
                            Margin="10,5"
                            Command="{Binding CreateProcessControlForLocationCommand}"
                            Style="{DynamicResource TransparentButtonStyle}"
                            AutomationProperties.AutomationId="AI_ProcessControlView_Add">
                        <StackPanel>
                            <controls:ThemeImage Source="pack://application:,,,/Resources;component/Icons/add-process-control.png"
                                          Height="40"/>
                            <TextBlock Text="{wpf:Gettext ProcessControl ToolBar|Create audit conditions}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Height="70"
                            MinWidth="75"
                            MaxWidth="85"
                            Margin="10,5"
                            Command="{Binding RemoveProcessControlForLocationCommand}"
                            Style="{DynamicResource TransparentButtonStyle}"
                            AutomationProperties.AutomationId="AI_ProcessControlView_Delete">
                        <StackPanel>
                            <controls:ThemeImage Source="pack://application:,,,/Resources;component/Icons/remove-process-control.png"
                                          Height="40"/>
                            <TextBlock Text="{wpf:Gettext ProcessControl ToolBar|Delete audit conditions}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Width="70"
                            Height="75"
                            MaxWidth="85"
                            Margin="10,5"
                            Command="{Binding SaveProcessControlCommand}"
                            Style="{DynamicResource TransparentButtonStyle}"
                            AutomationProperties.AutomationId="AI_ProcessControlView_Save">
                        <StackPanel>
                            <controls:ThemeImage Source="pack://application:,,,/Resources;component/Icons/save.png"
                                                 Height="30" 
                                                 Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext TestEquipmentView Ribbon|Save}"
                                       FontSize="10"
                                       TextAlignment="Center" 
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Height="70"
                            MinWidth="75"
                            MaxWidth="85"
                            Margin="10,5"
                            Style="{DynamicResource TransparentButtonStyle}"
                            Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}">
                        <StackPanel>
                            <controls:ThemeImage Source="pack://application:,,,/Resources;component/Icons/copy-document.png"
                                          Height="40"/>
                            <TextBlock Text="{wpf:Gettext ProcessControl ToolBar|Copy audit conditions}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1"
                               Fill="{DynamicResource SeperatedAreaBrush}"
                               Margin="0,5"/>

                    <Button Height="70"
                            MinWidth="75"
                            MaxWidth="85"
                            Margin="10,5"
                            Style="{DynamicResource TransparentButtonStyle}"
                            Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}">
                        <StackPanel>
                            <controls:ThemeImage Source="pack://application:,,,/Resources;component/Icons/add.png"
                                          Height="40"/>
                            <TextBlock Text="{wpf:Gettext ProcessControl ToolBar|Add audit technique}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </TabItem>

            <TabItem Header="{wpf:Gettext ProcessControl|Print}"
                     Height="30"
                     Padding="10,0">
            </TabItem>
        </TabControl>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4*" MinWidth="600"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <syncfusion:TreeViewAdv Grid.Column="0" x:Name="LocationTreeView"
                                    Background="{DynamicResource ControlBackgroundBrush}"             
                                     Margin="0,10,0,0"                              
                                     Width="Auto"
                                     AnimationType="None"
                                     AllowMultiSelect="False" 
                                     AllowDragDrop="False"
                                    SelectedTreeItem="{Binding Path=SelectedLocationTreeItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=view:ProcessControlView}, Delay=250, Mode=OneWayToSource}"
                                    AutomationProperties.AutomationId="AI_ProcessControlView_ProcessControlTreeView">
                <syncfusion:TreeViewAdv.ItemContainerStyle>
                    <Style TargetType="syncfusion:TreeViewItemAdv">
                        <Setter Property="AutomationProperties.AutomationId" Value="AI_ProcessControlView_ProcessControlTreeViewRootNode"/>
                    </Style>
                </syncfusion:TreeViewAdv.ItemContainerStyle>
            </syncfusion:TreeViewAdv>

            <GridSplitter Grid.Column="1" 
                          Width="2"
                          HorizontalAlignment="Stretch"
                          Margin="10,10,0,0"
                          Background="{DynamicResource GridSplitterBackground}"/>

            <TabControl Grid.Column="2"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        Margin="10,10,0,0">
                <TabItem Header="{wpf:Gettext ProcessControl|Process control conditions}" Name="TestConditionsTabItem"
                         Grid.IsSharedSizeScope="True"
                         AutomationProperties.AutomationId="AI_ProcessControlView_ProcessConditionTab">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Margin="0,5,0,0" AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_Scrollviewer">
                        <StackPanel IsEnabled="{Binding IsProcessControlConditionEnabled}">
                            <WrapPanel>

                                <!--Audit Parameters-->
                                <GroupBox Header="{wpf:Gettext ProcessControl|Audit parameters}"
                                          Margin="10"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="210"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="40"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="1" 
                                                   Text="{wpf:Gettext ProcessControl|Upper intervention limit (IL+)}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>

                                        <StackPanel Grid.Column="2"
                                                    Grid.Row="1"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <syncfusion:DoubleTextBox 
                                                Width="70"
                                                TabIndex="1"
                                                Value="{Binding SelectedProcessControl.UpperInterventionLimit, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
												AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_UpperInterventionLimit">
                                                <styles:DynamicContainerStyle.DerivedStyle>
                                                    <Style TargetType="syncfusion:DoubleTextBox">
                                                        <Style.Triggers>
                                                            <Trigger Property="Validation.HasError" Value="true">
                                                                <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)/ErrorContent}" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </styles:DynamicContainerStyle.DerivedStyle>
                                                <b:Interaction.Behaviors>
                                                    <behaviors:ShowChangedFromComparisonDoubleTextBoxBehavior ClearShownChangesParent="{Binding}"  CompareTo="{Binding SelectedProcessControlWithoutChanges.UpperInterventionLimit}"/>
                                                </b:Interaction.Behaviors>
                                            </syncfusion:DoubleTextBox>
                                            <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                       Margin="5,0"
                                                       VerticalAlignment="Center"/>
                                            <controls:ThemeImage 
                                                Source="pack://application:,,,/Resources;component/Icons/information_2.png"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                ToolTip="{wpf:Gettext ProcessControl|UpperInterventionLimitToolTip}"
                                                Opacity="0.5"
                                                Margin="10,0,0,0"
                                                ToolTipService.ShowOnDisabled="True"/>
                                        </StackPanel>


                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="3"
                                                   Text="{wpf:Gettext ProcessControl|Upper measuring limit (u. tol.)}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>

                                        <StackPanel Grid.Column="2"
                                                    Grid.Row="3"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <syncfusion:DoubleTextBox
                                                    Width="70"
                                                    TabIndex="3"
                                                    Value="{Binding SelectedProcessControl.UpperMeasuringLimit, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                                AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_UpperMeaseringLimit">                                                    
                                                <styles:DynamicContainerStyle.DerivedStyle>
                                                    <Style TargetType="syncfusion:DoubleTextBox">
                                                        <Style.Triggers>
                                                            <Trigger Property="Validation.HasError" Value="true">
                                                                <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)/ErrorContent}" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </styles:DynamicContainerStyle.DerivedStyle>
                                                <b:Interaction.Behaviors>
                                                    <behaviors:ShowChangedFromComparisonDoubleTextBoxBehavior ClearShownChangesParent="{Binding}"  CompareTo="{Binding SelectedProcessControlWithoutChanges.UpperMeasuringLimit}"/>
                                                </b:Interaction.Behaviors>
                                            </syncfusion:DoubleTextBox>
                                            <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                       Margin="5,0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="0"
                                                   Text="{wpf:Gettext ProcessControl|Lower intervention limit (IL-)}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>

                                        <StackPanel Grid.Column="2"
                                                    Grid.Row="0"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <syncfusion:DoubleTextBox 
                                                Width="70"
                                                TabIndex="0"
                                                Value="{Binding SelectedProcessControl.LowerInterventionLimit, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
												AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_LowerInterventionLimit">
                                                <styles:DynamicContainerStyle.DerivedStyle>
                                                    <Style TargetType="syncfusion:DoubleTextBox">
                                                        <Style.Triggers>
                                                            <Trigger Property="Validation.HasError" Value="true">
                                                                <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)/ErrorContent}" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </styles:DynamicContainerStyle.DerivedStyle>
                                                <b:Interaction.Behaviors>
                                                    <behaviors:ShowChangedFromComparisonDoubleTextBoxBehavior ClearShownChangesParent="{Binding}"  CompareTo="{Binding SelectedProcessControlWithoutChanges.LowerInterventionLimit}"/>
                                                </b:Interaction.Behaviors>
                                            </syncfusion:DoubleTextBox>
                                            <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                       Margin="5,0"
                                                       VerticalAlignment="Center"/>
                                            <controls:ThemeImage 
                                                Source="pack://application:,,,/Resources;component/Icons/information_2.png"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                ToolTip="{wpf:Gettext ProcessControl|LowerInterventionLimitToolTip}"
                                                Opacity="0.5"
                                                Margin="10,0,0,0"
                                                ToolTipService.ShowOnDisabled="True"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="2"
                                                   Text="{wpf:Gettext ProcessControl|Lower measuring limit (l. tol.)}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>

                                        <StackPanel Grid.Column="2"
                                                    Grid.Row="2"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <syncfusion:DoubleTextBox 
                                                Width="70"
                                                TabIndex="2"
                                                Value="{Binding SelectedProcessControl.LowerMeasuringLimit,ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                                AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_LowerMeaseringLimit">
                                                <styles:DynamicContainerStyle.DerivedStyle>
                                                    <Style TargetType="syncfusion:DoubleTextBox">
                                                        <Style.Triggers>
                                                            <Trigger Property="Validation.HasError" Value="true">
                                                                <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)/ErrorContent}" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </styles:DynamicContainerStyle.DerivedStyle>
                                                <b:Interaction.Behaviors>
                                                    <behaviors:ShowChangedFromComparisonDoubleTextBoxBehavior ClearShownChangesParent="{Binding}"  CompareTo="{Binding SelectedProcessControlWithoutChanges.LowerMeasuringLimit}"/>
                                                </b:Interaction.Behaviors>
                                            </syncfusion:DoubleTextBox>
                                            <TextBlock Text="{wpf:Gettext Unit|Nm}"
                                                       Margin="5,0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>

                                <!--Audit Rule-->
                                <GroupBox Margin="10"
                                          Header="{wpf:Gettext ProcessControl|Audit rules}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="40"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="0"
                                                   Text="{wpf:Gettext ProcessControlView|Test level set}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,30,0" />

                                        <ComboBox Grid.Column="1"
                                                  Grid.Row="0"
                                                  Width="150"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  ItemsSource="{Binding AvailableTestLevelSets}"
                                                  SelectedItem="{Binding Path=TestLevelSet, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                  DisplayMemberPath="Name"
                                                  AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_TestLevelSet"
                                                  AutomationProperties.Name="{Binding Path=SelectedProcessControl.TestLevelSet.Name, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
                                            <b:Interaction.Behaviors>
                                                <behaviors:ShowChangedComboBoxOnComparisonBehavior ClearShownChangesParent="{Binding}" CompareValue="{Binding SelectedProcessControlWithoutChanges.TestLevelSet}"/>
                                            </b:Interaction.Behaviors>
                                        </ComboBox>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="1"
                                                   Text="{wpf:Gettext ProcessControlView|Test level number}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,30,0" />

                                        <ComboBox Grid.Column="1"
                                                  Grid.Row="1"
                                                  Width="150"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  SelectedIndex="0"
                                                  ItemsSource="{Binding AvailableTestLevelSetNumbers}"
                                                  SelectedItem="{Binding Path=SelectedProcessControl.TestLevelNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                  AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_TestLevelSetNumber"
                                                  AutomationProperties.Name="{Binding Path=SelectedProcessControl.TestLevelNumber, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
                                            <b:Interaction.Behaviors>
                                                <behaviors:ShowChangedComboBoxOnComparisonBehavior ClearShownChangesParent="{Binding}" CompareValue="{Binding SelectedProcessControlWithoutChanges.TestLevelNumber}"/>
                                            </b:Interaction.Behaviors>
                                        </ComboBox>

                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="2"
                                                   Text="{wpf:Gettext ProcessControl|Start date}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,30,0"/>

                                        <DockPanel Grid.Column="1"
                                                   Grid.Row="2">
                                            <DatePicker x:Name="AuditRulesDatePicker"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Width="170"
                                                        SelectedDate="{Binding SelectedProcessControl.StartDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                        AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_StartDate">
                                                <b:Interaction.Behaviors>
                                                    <behaviors:ShowChangedDatePickerOnComparisonBehavior CompareValue="{Binding SelectedProcessControlWithoutChanges.StartDate}"/>
                                                </b:Interaction.Behaviors>
                                            </DatePicker>
                                            <controls:ThemeImage 
                                                Source="pack://application:,,,/Resources;component/Icons/information_2.png"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                ToolTip="{wpf:Gettext ProcessControl|StartDateToolTip}"
                                                Opacity="0.5"
                                                Margin="10,0,0,0"
                                                ToolTipService.ShowOnDisabled="True"/>
                                        </DockPanel>
                                        
                                        <TextBlock Grid.Column="0"
                                                   Grid.Row="3"
                                                   Text="{wpf:Gettext ProcessControl|Audit operation}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,30,0"/>

                                        <DockPanel Grid.Column="1"
                                                   Grid.Row="3">
                                            <CheckBox VerticalAlignment="Center" 
                                                      IsChecked="{Binding SelectedProcessControl.TestOperationActive, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                      AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_AuditOperationActive">
                                                <b:Interaction.Behaviors>
                                                    <behaviors:ShowChangedToggleButtonOnComparisonBehavior CompareValue="{Binding SelectedProcessControlWithoutChanges.TestOperationActive}"/>
                                                </b:Interaction.Behaviors>
                                            </CheckBox>
                                            <controls:ThemeImage 
                                                Source="pack://application:,,,/Resources;component/Icons/information_2.png"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                ToolTip="{wpf:Gettext ProcessControl|AuditOperationToolTip}"
                                                Opacity="0.5"
                                                Margin="10,0,0,0"
                                                ToolTipService.ShowOnDisabled="True"/>
                                        </DockPanel>
                                        
                                    </Grid>
                                </GroupBox>
                            
                                <!--Audit technique-->
                                <GroupBox Margin="10"
                                          Header="{wpf:Gettext ProcessControl|Audit technique}"
                                          Style="{DynamicResource EqualSizedGroupBoxStyle}">
                                    <WrapPanel>
                                        <Expander Margin="10,10,10,10"
                                                  Width="450"
                                                  VerticalAlignment="Top"
                                                  BorderThickness="2"
                                                  BorderBrush="White"
                                                  Header="{wpf:Gettext ProcessControlTechnique|QST standard methods}"
                                                  IsExpanded="{Binding IsQstStandardMethodExpanded, UpdateSourceTrigger=PropertyChanged}"
                                                  AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_TechniqueExpander">

                                            <Expander.HeaderTemplate>
                                                <DataTemplate>
                                                    <Grid HorizontalAlignment="Stretch">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Label Grid.Column="0"
                                                                          Content="{Binding}"
                                                                          Style="{DynamicResource ExpanderHeadeStyle}"/>
                                                        <Button Grid.Column="1"
                                                                Width="15"
                                                                Height="15"
                                                                Margin="10,3"
                                                                Style="{DynamicResource TransparentButtonStyle}"
                                                                Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}">
                                                            <controls:ThemeImage Source="pack://application:,,,/Resources;component/Icons/delete.png"/>
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </Expander.HeaderTemplate>

                                            <Grid Margin="10,10,10,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="40"/>
                                                    <RowDefinition Height="20"/>
                                                    <RowDefinition Height="40"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!--Audit Rule-->
                                                <TextBlock Grid.Column="0"
                                                           Grid.Row="0"
                                                           Text="{wpf:Gettext ProcessControl|Extension}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"
                                                           Margin="10,10,10,10"/>

                                                <DockPanel Grid.Column="1" Grid.Row="0">
                                                    <ComboBox Width="200"
                                                              Margin="0,0,10,0"
                                                              VerticalAlignment="Center"
                                                              ItemsSource="{Binding AvailableExtensions}"
                                                              DisplayMemberPath="InventoryNumber"
                                                              SelectedItem="{Binding Path=SelectedExtension, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                              AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_Extension"/>
                                                    <Button HorizontalAlignment="Left" Style="{DynamicResource HelperTableButtonStyle}"/>
                                                </DockPanel>

                                                <TextBlock Grid.Column="0"
                                                           Grid.Row="1"
                                                           Text="{wpf:Gettext ProcessControl|Factor angle}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"
                                                           Margin="10,10,10,10"/>

                                                <DockPanel Grid.Row="1" Grid.Column="1">
                                                    <syncfusion:DoubleTextBox Width="70" IsEnabled="False"
                                                                      AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_ExtensionFactorAngle"/>
                                                    <controls:ThemeImage 
                                                                Source="pack://application:,,,/Resources;component/Icons/information_2.png"
                                                                Width="20"
                                                                Height="20"
                                                                HorizontalAlignment="Left"
                                                                ToolTip="{wpf:Gettext ProcessControl|FactorAngleToolTip}"
                                                                Opacity="0.5"
                                                                Margin="10,0,0,0"
                                                                ToolTipService.ShowOnDisabled="True"/>
                                                </DockPanel>

                                                <TextBlock Grid.Column="0"
                                                           Grid.Row="2"
                                                           Text="{wpf:Gettext ProcessControl|Length gauge}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"
                                                           Margin="10,10,10,10"/>

                                                <StackPanel Grid.Column="1"
                                                            Grid.Row="2"
                                                            Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <syncfusion:DoubleTextBox Width="70" IsEnabled="False" AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_LengthGauge">
                                                    </syncfusion:DoubleTextBox>
                                                    <TextBlock Text="mm"
                                                               Margin="5,0"
                                                               VerticalAlignment="Center"/>
                                                    <controls:ThemeImage 
                                                                Source="pack://application:,,,/Resources;component/Icons/information_2.png"
                                                                Width="20"
                                                                Height="20"
                                                                HorizontalAlignment="Left"
                                                                ToolTip="{wpf:Gettext ProcessControl|LengthGaugeToolTip}"
                                                                Opacity="0.5"
                                                                Margin="10,0,0,0"
                                                                ToolTipService.ShowOnDisabled="True"/>
                                                </StackPanel>

                                                <TextBlock  Grid.Column="0"
                                                           Grid.Row="4"
                                                           Text="{wpf:Gettext ProcessControl|Method}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"
                                                           Margin="10,10,10,10"/>

                                                <ComboBox Grid.Column="1" Margin="0,3,0,0"
                                                    Grid.Row="4"
                                                    Width="200" Height="30"
                                                    HorizontalAlignment="Left"
                                                    SelectedItem="{Binding SelectedProcessControl.QstProcessControlTechHumbleModel.TestMethod, Mode=TwoWay}"
                                                    styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type ComboBox}}"
                                                    AutomationProperties.AutomationId="AI_PCV_ProcessConditionTab_Method"
                                                    AutomationProperties.Name="{Binding SelectedProcessControl.QstProcessControlTechHumbleModel.TestMethod, Mode=OneWay}">
                                                    <b:Interaction.Behaviors>
