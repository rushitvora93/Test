<UserControl x:Class="FrameworksAndDrivers.Gui.Wpf.View.LocationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FrameworksAndDrivers.Gui.Wpf.ViewModel"
             xmlns:view="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:styles="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Styles"
             xmlns:c="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Controls"
             xmlns:behaviors="clr-namespace:FrameworksAndDrivers.Gui.Wpf.View.Behaviors"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:wpf="clr-namespace:NGettext.Wpf;assembly=NGettext.Wpf"
             xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:enums="clr-namespace:Core.Enums;assembly=Client.Core"
             mc:Ignorable="d" 
             d:DesignHeight="1500" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance local:LocationViewModel, IsDesignTimeCreatable=False}"
             AutomationProperties.AutomationId="AI_MpView">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Styles/ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="Styles/GroupBoxStyles.xaml"/>
                <ResourceDictionary Source="Styles/ExpanderStyles.xaml"/>
                <ResourceDictionary Source="Styles/ListStyles.xaml"/>
                <ResourceDictionary Source="Styles/TabStyles.xaml"/>
                <ResourceDictionary Source="Styles/TreeStyles.xaml"/>
                <ResourceDictionary Source="Styles/PanelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <ControlTemplate x:Key="ValidationTemplate">
                <Border BorderBrush="Red"
                        BorderThickness="1">
                    <Grid Background="Transparent"
                          ToolTip="{Binding Path=/ErrorContent}">
                        <AdornedElementPlaceholder />
                    </Grid>
                </Border>
            </ControlTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadTreeCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <DockPanel>
        <TabControl DockPanel.Dock="Top"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    Height="120">
            <TabItem Header="{wpf:Gettext LocationView ToolBar|Start}"
                     Height="30"
                     Padding="10,0"
                     styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TabItem}}">
                <styles:DynamicContainerStyle.DerivedStyle>
                    <Style x:Name="StartTabItemStyle" TargetType="{x:Type TabItem}">
                        <Style.Triggers>
                            <!--Select RibbonTabStart if RibbonTabProcessCheck or RibbonTabToolCheck was selected when it is collapsed-->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Path=IsSelected, ElementName=RibbonTabProcessCheck}" Value="False"/>
                                    <Condition Binding="{Binding Path=IsSelected, ElementName=RibbonTabToolCheck}" Value="False"/>
                                    <Condition Binding="{Binding Path=IsSelected, ElementName=RibbonTabFile}" Value="False"/>
                                </MultiDataTrigger.Conditions>

                                <Setter Property="IsSelected" Value="True"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </styles:DynamicContainerStyle.DerivedStyle>

                <TabItem.Content>
                    <StackPanel Orientation="Horizontal">
                        <Button Width="70"
                                Height="60"
                                Margin="10,5"
                                VerticalContentAlignment="Top"
                                Style="{DynamicResource TransparentButtonStyle}"
                                Command="{Binding AddLocationCommand}"
                                AutomationProperties.AutomationId="AI_MpView_AddMp">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/add.png"
                                              Height="30"
                                              Margin="0,0,0,2"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Add measurepoint}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="70"
                                Height="60"
                                Margin="10,5"
                                Padding="0"
                                VerticalContentAlignment="Top"
                                Style="{DynamicResource TransparentButtonStyle}"
                                Command="{Binding AddLocationDirectoryCommand}"
                                AutomationProperties.AutomationId="AI_MpView_AddFolder">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/new-add-folder.png"
                                              Height="30"
                                              Margin="0,0,0,2"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Add folder}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="70"
                                Height="60"
                                Margin="10,5"
                                VerticalContentAlignment="Top"
                                Style="{DynamicResource TransparentButtonStyle}"
                                Command="{Binding RemoveLocationOrDirectoryCommand}"
                                AutomationProperties.AutomationId="AI_MpView_Delete">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/delete.png"
                                              Height="30"
                                              Margin="0,0,0,2"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Delete}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="70"
                                Height="60"
                                Margin="10,5"
                                VerticalContentAlignment="Top"
                                Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}"
                                Style="{DynamicResource TransparentButtonStyle}">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/copy-document.png"
                                              Height="30"
                                              Margin="0,0,0,2"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Copy}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="70"
                                Height="60"
                                Margin="10,5"
                                VerticalContentAlignment="Top"
                                Command="{Binding PasteCommand}"
                                Style="{DynamicResource TransparentButtonStyle}"
                                AutomationProperties.AutomationId="AI_MpView_Paste">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/paste-from-clipboard.png"
                                              Height="30"
                                              Margin="0,0,0,2"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Paste}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="70"
                                Height="60"
                                Margin="10,5"
                                VerticalContentAlignment="Top"
                                Style="{DynamicResource TransparentButtonStyle}"
                                Command="{Binding CutCommand}"
                                AutomationProperties.AutomationId="AI_MpView_Cut">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/scissors.png"
                                              Height="30"
                                              Margin="0,0,0,2"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Cut}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="70"
                                Height="60"
                                Margin="10,5"
                                VerticalContentAlignment="Top"
                                Command="{Binding SaveLocationCommand}"
                                Style="{DynamicResource TransparentButtonStyle}"
                                AutomationProperties.AutomationId="AI_MpView_SaveMp">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/save.png"
                                              Height="30"
                                              Margin="0,0,0,2"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Save}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>

                        <Rectangle Width="1"
                                   Fill="{DynamicResource SeperatedAreaBrush}"
                                   Margin="0,5"
                                   Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}"/>

                        <Button Width="70"
                                Height="60"
                                Margin="10,5"
                                VerticalContentAlignment="Top"
                                Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}"
                                Style="{DynamicResource TransparentButtonStyle}">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/history.png"
                                              Height="30"
                                              Margin="0,0,0,2"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Insert history}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="70"
                                Height="60"
                                Margin="10,5"
                                VerticalContentAlignment="Top"
                                Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}"
                                Style="{DynamicResource TransparentButtonStyle}">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/settings_02.png"
                                              Height="30"
                                              Margin="0,0,0,2"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Settings}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Header="{wpf:Gettext LocationView ToolBar|Working calender}"
                     Height="30"
                     Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}"
                     Padding="10,0">
                <StackPanel Orientation="Horizontal">
                    <Button Width="75"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/calendar.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Show working calender}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Width="75"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/remove-calendar.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Delete working calender}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Width="75"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/allocate-calendar.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Attach working calender}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </TabItem>

            <TabItem Header="{wpf:Gettext LocationView ToolBar|Print}"
                     Height="30"
                     Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}"
                     Padding="10,0">
                <StackPanel Orientation="Horizontal">
                    <Button Width="75"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/printer.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Print measurementpoint}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Width="75"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/print-folder.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Print folder content}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Width="75"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/print-tree.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Print structure tree}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1"
                               Fill="{DynamicResource SeperatedAreaBrush}"
                               Margin="0,5"/>

                    <Button Width="75"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/label-without-barcode.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Label without barcode}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Width="75"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/tag.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Label with barcode}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Width="75"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/label-free.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Free label}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </TabItem>

            <TabItem Header="{wpf:Gettext LocationView ToolBar|Picture}"
                     Height="30"
                     Visibility="{Binding Source={x:Static view:HideUnusedPartsUtil.UnusedFunctionVisibility}}"
                     Padding="10,0">
                <StackPanel Orientation="Horizontal">
                    <Button Width="70"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/add-picture.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Add picture}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Width="70"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/remove-picture.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Remove picture}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                    <Button Width="70"
                            Height="60"
                            Margin="10,5"
                            VerticalContentAlignment="Top"
                            Style="{DynamicResource TransparentButtonStyle}">
                        <StackPanel>
                            <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/allocate-picture.png"
                                          Height="30"
                                          Margin="0,0,0,2"/>
                            <TextBlock Text="{wpf:Gettext LocationView ToolBar|Link picture}"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </TabItem>

            <TabItem x:Name="RibbonTabToolCheck"
                     Header="{wpf:Gettext LocationView|Tool audit}"
                     Height="30"
                     Padding="10,0"
                     IsSelected="{Binding IsSelected, ElementName=TabItemToolCheck, Mode=OneWay}"
                     styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TabItem}}">
                <!--Tab is only visible if the TabItemProcessCheck is selected-->
                <styles:DynamicContainerStyle.DerivedStyle>
                    <Style TargetType="{x:Type TabItem}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSelected, ElementName=TabItemToolCheck}"
                                         Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsSelected, ElementName=TabItemToolCheck}"
                                         Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </styles:DynamicContainerStyle.DerivedStyle>

                <TabItem.Content>
                    <StackPanel Orientation="Horizontal">
                        <Button Width="75"
                                Height="70"
                                Margin="10,5"
                                Style="{DynamicResource TransparentButtonStyle}">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/allocate-tool.png"
                                              Height="40"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Attach tool}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="75"
                                Height="70"
                                Margin="10,5"
                                Style="{DynamicResource TransparentButtonStyle}">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/remove-tool.png"
                                              Height="40"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Remove tool}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="82"
                                Height="70"
                                Margin="10,5"
                                Style="{DynamicResource TransparentButtonStyle}">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/exchange-arrows.png"
                                              Height="40"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Change tool}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="80"
                                Height="70"
                                Margin="10,5"
                                Style="{DynamicResource TransparentButtonStyle}">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/tool-control.png"
                                              Height="40"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Create audit conditions}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>

                        <Rectangle Width="1"
                                   Fill="{DynamicResource SeperatedAreaBrush}"
                                   Margin="0,5"/>

                        <StackPanel Margin="10,0">
                            <RadioButton x:Name="RadioButtonIndividualForAuditTypes" 
                                         Content="{wpf:Gettext LocationView ToolBar|Individual audit parameters}"
                                         Margin="0,10,10,0"
                                         IsChecked="True"
                                         FontSize="12"/>
                            <RadioButton x:Name="RadioButtonAuditTypeLikeBench"
                                         Content="{wpf:Gettext LocationView ToolBar|Equal audit parameters}"
                                         FontSize="12"/>
                        </StackPanel>

                        <Rectangle Width="1"
                                   Fill="{DynamicResource SeperatedAreaBrush}"
                                   Margin="0,5"/>

                        <CheckBox Content="{wpf:Gettext LocationView ToolBar|Same model at tool change}"
                                  Margin="10"
                                  FontSize="12"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="RibbonTabFile"
                     Header="{wpf:Gettext LocationView|Files}"
                     Height="30"
                     Padding="10,0"
                     IsSelected="{Binding IsSelected, ElementName=TabItemFile, Mode=OneWay}"
                     styles:DynamicContainerStyle.BaseStyle="{DynamicResource {x:Type TabItem}}">
                <!--Tab is only visible if the TabItemProcessCheck is selected-->
                <styles:DynamicContainerStyle.DerivedStyle>
                    <Style TargetType="{x:Type TabItem}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSelected, ElementName=TabItemFile}"
                                         Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsSelected, ElementName=TabItemFile}"
                                         Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </styles:DynamicContainerStyle.DerivedStyle>

                <TabItem.Content>
                    <StackPanel Orientation="Horizontal">
                        <Button Width="75"
                                Height="70"
                                Margin="10,5"
                                Style="{DynamicResource TransparentButtonStyle}">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/add.png"
                                              Height="40"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Add file}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                        <Button Width="75"
                                Height="70"
                                Margin="10,5"
                                Style="{DynamicResource TransparentButtonStyle}">
                            <StackPanel>
                                <c:ThemeImage Source="pack://application:,,,/Resources;component/Icons/delete.png"
                                              Height="40"/>
                                <TextBlock Text="{wpf:Gettext LocationView ToolBar|Remove file}"
                                           FontSize="10"
                                           TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
        </TabControl>


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4*" MinWidth="600"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <syncfusion:TreeViewAdv x:Name="LocationTreeView"
                                    Grid.Column="0"
                                    Background="{DynamicResource ControlBackgroundBrush}"
                                    AnimationType="None"
                                    Margin="0,10,0,0"
                                    AllowMultiSelect="False"
                                    AllowDragDrop="False"
                                    SelectedTreeItem="{Binding Path=SelectedTreeItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=view:LocationView}, Delay=250, Mode=OneWayToSource}"
                                    AutomationProperties.AutomationId="AI_MpView_MPTreeView">
                    <syncfusion:TreeViewAdv.ItemContainerStyle>
                        <Style TargetType="syncfusion:TreeViewItemAdv">
                            <Setter Property="AutomationProperties.AutomationId" Value="AI_MpView_MpTreeView_RootNode"/>
                        </Style>
                    </syncfusion:TreeViewAdv.ItemContainerStyle>
                    <syncfusion:TreeViewAdv.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                     Color="LightGray" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                     Color="Black" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                     Color="LightGray" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                     Color="Black" />
                </syncfusion:TreeViewAdv.Resources>
            </syncfusion:TreeViewAdv>
            
            
            <GridSplitter Grid.Column="1" 
                          Width="2"
                          HorizontalAlignment="Stretch"
                          Margin="10,10,0,0"
                          Background="{DynamicResource GridSplitterBackground}"/>

            <TabControl Grid.Column="2"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        Margin="10,0,0,0">
                <!--Parameter-->
                <TabItem Header="{wpf:Gettext LocationView|Parameter}" AutomationProperties.AutomationId="AI_MpView_SingleMp_ParamTab">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" AutomationProperties.AutomationId="AI_MpView_SingleMp_ParamTabScrollViewer">
                        <DockPanel>
                            <DockPanel.Style>
                                <Style TargetType="DockPanel">
